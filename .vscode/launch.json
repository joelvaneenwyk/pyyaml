    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: pytest",
            "type": "python",
            "request": "launch",
            "stopOnEntry": false,
            "justMyCode": false,
            "module": "pytest",
            "args": ["${workspaceFolder}/tests/lib"],
            "cwd": "${workspaceRoot}",
            "env": {},
            "envFile": "${workspaceRoot}/.env"
        },
        {
            "name": "Python: {current file}",
            "type": "python",
            "request": "launch",
            "args": ["-m", "pytest", "--collect-only"],
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: `run_all_tests.py`",
            "type": "python",
            "request": "launch",
            "args": [],
            "program": "${workspaceFolder}/tests/lib/run_all_tests.py",
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}
